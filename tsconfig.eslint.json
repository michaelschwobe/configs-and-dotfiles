{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ESLint",

  "extends": "./tsconfig.base.json",

  "include": ["eslint.config.js", "knip.config.js", "prettier.config.js"],

  "compilerOptions": {
    /** Projects */
    "tsBuildInfoFile": "./node_modules/.cache/tsconfig.eslint.tsbuildinfo",

    /** Language and Environment */
    "target": "ES2022",
    "lib": ["ES2022"],

    /** JavaScript Support */
    "allowJs": true,
    "checkJs": true
  }
}
